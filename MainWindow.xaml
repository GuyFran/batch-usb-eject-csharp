<Window x:Class="UsbEjector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="USB Ejector (.NET 8)" Width="720" Height="450"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Content="Refresh Drives"
                Width="150" Height="32"
                Click="Refresh_Click"/>

        <ListView x:Name="DriveList"
                  Grid.Row="1"
                  Margin="0,10,0,10"
                  ItemsSource="{Binding Drives}">

            <ListView.View>
                <GridView>
                    <GridViewColumn Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Drive" Width="70"
                                    DisplayMemberBinding="{Binding DriveLetter}"/>

                    <GridViewColumn Header="Label" Width="120"
                                    DisplayMemberBinding="{Binding VolumeLabel}"/>

                    <GridViewColumn Header="NTFS Name" Width="120"
                                    DisplayMemberBinding="{Binding NtfsVolumeName}"/>

                    <GridViewColumn Header="VID" Width="70"
                                    DisplayMemberBinding="{Binding VendorId}"/>

                    <GridViewColumn Header="PID" Width="70"
                                    DisplayMemberBinding="{Binding ProductId}"/>

                    <GridViewColumn Header="DevInst" Width="150"
                                    DisplayMemberBinding="{Binding DevInst}"/>
                </GridView>
            </ListView.View>

        </ListView>

        <Button Grid.Row="2"
                Content="Safely Remove Selected"
                Height="40"
                Click="Eject_Click"/>
    </Grid>
</Window>
